# API Keys - Replace with your actual keys
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
GOOGLE_GEMINI_API_KEY=your_google_generative_language_api_key_here

# Choose which LLM provider to use for summarize/highlight/compare: 'openai' or 'gemini'
LLM_PROVIDER=openai

# Server Configuration
PORT=8080
NODE_ENV=development

# Optional: Database and Storage
DATABASE_URL=your_database_url_here
S3_BUCKET=your_s3_bucket_here

# Demo mode: when true, backend returns mock responses for summarize/highlight/compare
# Set to true if you don't have API keys yet.
DEMO_MODE=false
